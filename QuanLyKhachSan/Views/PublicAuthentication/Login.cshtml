@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}
<div class="hero-wrap js-fullheight" style="background-image: url('https://cdn.pixabay.com/photo/2021/11/02/02/01/ha-long-6762301_1280.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 text-center" style="margin-top: 200px" data-scrollax="properties: { translateY: '70%' }">
                <h1 class="mb-4" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><strong>Đăng nhập</strong></h1>
                <p data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"></p>
            </div>
        </div>
    </div>
</div>

<!-- Phần thông báo -->
@if (ViewBag.mess == "Success")
{
    <div class="toast" data-delay="1000" style="position:fixed; top: 100px; left: 40px; z-index: 2000; width: 300px">
        <script>
            swal({
                title: 'Xác thực thành công!',
                icon: 'success',
                timer: 3000,
                buttons: true,
                type: 'success'
            })
        </script>
    </div>
}

@if (ViewBag.mess == "ResetOk")
{
    <div class="toast" data-delay="1000" style="position:fixed; top: 100px; left: 40px; z-index: 2000; width: 300px">
        <script>
            swal({
                title: 'Thành công!',
                icon: 'success',
                timer: 3000,
                buttons: true,
                type: 'success'
            })
        </script>
    </div>
}

@if (ViewBag.mess == "ErrorExist")
{
    <div class="toast" data-delay="1000" style="position:fixed; top: 100px; left: 10px; z-index: 2000; width: 300px">
        <script>
            swal({
                title: 'Tên người dùng đã tồn tại!',
                icon: 'error',
                timer: 3000,
                buttons: true,
                type: 'success'
            })
        </script>
    </div>
}

@if (ViewBag.mess == "ErrorPassword")
{
    <div class="toast" data-delay="1000" style="position:fixed; top: 100px; left: 10px; z-index: 2000; width: 300px">
        <script>
            swal({
                title: 'Hai mật khẩu không trùng khớp',
                icon: 'error',
                timer: 3000,
                buttons: true,
                type: 'success'
            })
        </script>
    </div>
}

@if (ViewBag.mess == "Error")
{
    <div class="toast" data-delay="1000" style="position:fixed; top: 100px; left: 10px; z-index: 2000; width: 300px">
        <script>
            swal({
                title: 'Thông tin tài khoản hoặc mật khẩu không chính xác',
                icon: 'error',
                timer: 3000,
                buttons: true,
                type: 'success'
            })
        </script>
    </div>
}

<!-- HOME -->
<section class="section-hero overlay inner-page bg-image" style="background-image: url('images/hero_1.jpg');" id="home-section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-white font-weight-bold"> Đăng nhập</h1>
            </div>
        </div>
    </div>
</section>

<section class="site-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h2 class="mb-4 text-center">Đăng nhập</h2>
                <form action="/PublicAuthentication/Login" method="post" class="p-4 border rounded">

                    <div class="row form-group">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <label class="text-black" for="fname">Tên người dùng</label>
                            <input type="text" id="fname" name="userName" class="form-control" required>
                        </div>
                    </div>

                    <div class="row form-group mb-4">
                        <div class="col-md-12 mb-3 mb-md-0">
                            <label class="text-black" for="fname">Mật khẩu</label>
                            <input type="password" id="fname" name="password" class="form-control" required>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-6">
                            <input type="submit" value="Đăng nhập" class="btn btn-block btn-primary btn-md">
                        </div>
                        <div class="col-md-6">
                            <a class="btn btn-block btn-primary btn-md" href="/PublicAuthentication/ForgotPassword">Quên mật khẩu</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>
